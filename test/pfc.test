# -*- coding:utf-8; tab-width:4; mode:python -*-

import os

tex='$basedir/tex'
sample='$basedir/samples/latex/pfc'

def copy(srcdir, fname, dstdir):
    Test('cp {srcdir}/{fname} {dstdir}'.format(**locals()),
         gen=os.path.join(dstdir, fname))

for fname in ['arco-pfc.cls', 'atbeginend.sty', 'es-alpha.bst']:
    copy(tex, fname, sample)

Test('make clean all', cwd=sample)
Test('make clean', cwd=sample)
