#!/usr/bin/make -f
# -*- makefile -*-

%:
	dh  $@


VERSION=0.37

override_dh_auto_build:

	@sed '/#common.functions#/ r $(CURDIR)/debian/common.functions' < $(CURDIR)/debian/postinst.in > $(CURDIR)/debian/arco-latex.postinst
	@sed '/#common.functions#/ r $(CURDIR)/debian/common.functions' < $(CURDIR)/debian/postrm.in > $(CURDIR)/debian/arco-latex.postrm

build-orig-source:
	mkdir -p arco-tools-$(VERSION)
	tar --exclude=debian --exclude=\*~ --exclude=\.svn --exclude=arco-tools-$(VERSION) -cf - . \
		| ( cd arco-tools-$(VERSION) && tar xf - )
	tar -czf ../tarballs/arco-tools_$(VERSION).orig.tar.gz arco-tools-$(VERSION)
	$(RM) -r arco-tools-$(VERSION)
