#!/usr/bin/make -f
# -*- makefile -*-

#VERSION=$(shell head -n 1 debian/changelog | cut -f2 -d " " | tr -d "()" | cut -f1 -d "-")
VERSION=$(shell dpkg-parsechangelog | grep ^Version: | cut -d' ' -f2 | cut -d'-' -f1)

%:
	dh  $@

override_dh_auto_build:
	dh_auto_build

	@sed '/#common.functions#/ r $(CURDIR)/debian/common.functions' < $(CURDIR)/debian/postinst.in > $(CURDIR)/debian/arco-authors.postinst

build-orig:
	mkdir -p arco-tools-$(VERSION)
	tar --exclude=debian --exclude=\*~ --exclude=\.svn --exclude=arco-tools-$(VERSION) -cf - . \
		| ( cd arco-tools-$(VERSION) && tar xf - )
	tar -czf ../tarballs/arco-tools_$(VERSION).orig.tar.gz arco-tools-$(VERSION)
	$(RM) -r arco-tools-$(VERSION)
